  - if @thanks.present?
    .thanks__message
      = form_with model: inquiry,url:inquiries_thanks_path do |f|
        .ahomes__form
          - if inquiry.conpany.present?
            .ahomes__title.aformd__title.milkkandy__box__form
              .formtitles
