      = interviews.find(1).home.ititle
    .interviews__title2
      = interviews.find(1).home.ititle2
  .interviews__question
    %ul
      - interviews.each_with_index do |interview,i|
       

        %li{"data-question-id" => "#{interview.id}"}
         
          .interviews__question__rows
            Q
            =":"
            -# = interview.question 
            = safe_join(interview.question .split("\n"),tag(:br))
            =icon("fas","plus")
          .interviews__question__answers{id:"slidetoggle_menu#{interview.id}"}
            -# = interview.answer
            = safe_join(interview.answer.split("\n"),tag(:br))
        
      

      

